{
  "name": "@sad-systems/a-tracktor",
  "version": "2.0.1",
  "description": "The library of widgets for visualizing and control media (audio/video) data.",
  "main": "lib.bundle.js",
  "module": "lib.js",
  "license": "ISC",
  "author": "MrDigger <mrdigger@mail.ru> (https://sad-systems.github.io)",
  "homepage": "https://github.com/sad-systems/a-tracktor",
  "repository": {
    "type": "git",
    "url": "https://github.com/sad-systems/a-tracktor.git"
  },
  "keywords": [
    "web",
    "audio",
    "video",
    "media",
    "analyzer",
    "custom",
    "player",
    "javascript",
    "typescript",
    "widget",
    "microphone"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config webpack.demo.config.js",
    "build": "cross-env NODE_ENV=production webpack && yarn make-declarations && yarn build:css && yarn docs && yarn build:demo",
    "build:demo": "cross-env NODE_ENV=production webpack --config webpack.demo.config.js",
    "build:css": "node-sass src/styles/media-player.scss dist/css/media-player.css",
    "make-declarations": "tsc -d src/lib.ts --outDir dist",
    "docs": "typedoc",
    "npm-publish": "cd dist && npm publish --access public --token",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "yarn prettier --write src/",
    "format-check": "yarn prettier --check src/"
  },
  "devDependencies": {
    "@types/ws": "8.5.4",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^7.0.3",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lodash": "^4.17.11",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.21",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.8.3",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.3.3",
    "sass-loader": "^16.0.6",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.28.14",
    "typedoc-material-theme": "^1.4.1",
    "typescript": "^5.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}
